<div class="form-group" style="margin: 0;">
	<div id="media_preview">
		<div class="thumbnail hidden">
			<a href="{__PATH__}{__src__}" class="cbox cboxElement" title="{__title__}" alt="{__alt__}">
				<img src="{__PATH__}{__src__}" alt="{__alt__}" title="{__title__}" style="max-height:500px;" class="media src" />
			</a>
			<div class="caption">
				<strong>src : </strong>
				<p class="src file-name">{__src__}</p>
				<strong>desciption : </strong>
				<p class="src media-description">{__media_description__}</p>
				<strong>title : </strong>
				<p class="src media-title">{__title__}</p>
				<strong>alt : </strong>
				<p class="src media-alt">{__alt__}</p>
			</div>
		</div>
	</div>
</div>
